{
  "name": "kusanagi",
  "displayName": "Kusanagi",
  "description": "Inline AI prompting for VS Code",
  "version": "0.3.0",
  "license": "Apache-2.0",
  "publisher": "shanemaiolo",
  "author": {
    "name": "Shane Maiolo",
    "url": "https://github.com/shanemaiolo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shanemaiolo/kusanagi"
  },
  "homepage": "https://github.com/shanemaiolo/kusanagi",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Machine Learning", "Programming Languages", "Snippets"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kusanagi.prompt",
        "title": "Kusanagi: Prompt"
      }
    ],
    "keybindings": [
      {
        "command": "kusanagi.prompt",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Kusanagi",
      "properties": {
        "kusanagi.provider": {
          "type": "string",
          "default": "claude",
          "enum": ["claude", "opencode"],
          "enumDescriptions": [
            "Claude Code CLI (npm install -g @anthropic-ai/claude-code)",
            "OpenCode CLI (go install github.com/opencode-ai/opencode@latest)"
          ],
          "description": "The AI CLI backend to use for code generation."
        }
      }
    }
  },
  "scripts": {
    "compile": "bun build src/extension.ts --outfile=dist/extension.js --external vscode --format=cjs --target=node",
    "watch": "bun build src/extension.ts --outfile=dist/extension.js --external vscode --format=cjs --target=node --watch",
    "package": "bun run compile && vsce package",
    "vscode:prepublish": "bun run compile"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "@types/bun": "latest"
  },
  "private": true
}
